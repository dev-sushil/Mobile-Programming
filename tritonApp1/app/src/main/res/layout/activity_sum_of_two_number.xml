<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UnknownId">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SumOfTwoNumber"
        android:id="@+id/lblSumOfTwoNumber"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Num 1"
        android:id="@+id/lblNum1"
        android:layout_below="@id/lblSumOfTwoNumber"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Num 2"
        android:id="@+id/lblNum2"
        android:layout_below="@id/lblNum1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtNum1"
        android:hint="Enter Num 1"
        android:layout_below="@+id/lblSumOfTwoNumber"
        android:layout_toRightOf="@+id/lblNum1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtNum2"
        android:hint="Enter Num 2"
        android:layout_below="@+id/lblNum1"
        android:layout_toRightOf="@+id/lblNum2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/btnAdd"
        android:layout_below="@id/txtNum2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SumOfTwoNumber:"
        android:id="@+id/lblResult"
        android:layout_below="@id/btnAdd"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"
        android:textSize="20dp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtResult"
        android:hint="SumOfTwoNumber"
        android:layout_below="@+id/lblResult"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"

        />

</RelativeLayout>
