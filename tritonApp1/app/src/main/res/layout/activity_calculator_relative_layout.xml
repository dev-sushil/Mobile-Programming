<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UnknownId">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:id="@+id/lblcalculator"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Num 1"
        android:id="@+id/lblNum1"
        android:layout_below="@id/lblcalculator"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Num 2"
        android:id="@+id/lblNum2"
        android:layout_below="@id/lblNum1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtNum1"
        android:hint="Enter Num 1"
        android:layout_below="@+id/lblcalculator"
        android:layout_toRightOf="@+id/lblNum1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtNum2"
        android:hint="Enter Num 2"
        android:layout_below="@+id/lblNum1"
        android:layout_toRightOf="@+id/lblNum2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/btnAdd"
        android:layout_below="@id/txtNum2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUB"
        android:id="@+id/btnSub"
        android:layout_below="@id/txtNum2"
        android:layout_toRightOf="@+id/btnAdd"
        android:layout_marginTop="20dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MUL"
        android:id="@+id/btnMul"
        android:layout_below="@id/txtNum2"
        android:layout_toRightOf="@+id/btnSub"
        android:layout_marginTop="20dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DIV"
        android:id="@+id/btnDiv"
        android:layout_below="@id/txtNum2"
        android:layout_toRightOf="@+id/btnMul"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result:"
        android:id="@+id/lblResult"
        android:layout_below="@id/btnAdd"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:textSize="20dp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtResult"
        android:hint="Result"
        android:layout_below="@+id/btnAdd"
        android:layout_toRightOf="@+id/lblResult"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

</RelativeLayout>
